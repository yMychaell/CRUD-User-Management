<%- include('./include/_header')%>

    <main class="home">
      <div class="container">
        <div>
          <a href="/" class="text-gradient"><i class="fa-solid fa-angle-double-left"></i> All Users</a>
        </div> 

        <div class="container">
            <div class="form-title text-center">
              <h3 class="title-dark">Update User</h3>
              <span class="text-gray">Use the below form to update an account.</span>
            </div>
        </div>

      <form id="update-user" method="POST">
          <div class="new-user"> <div class="form-group">
                  <label for="name">Name</label>
                  <input type="hidden" name="id" value="<%= user._id  %>"/>
                  <input type="text" name="name" value="<%= user.name %>"/>
              </div>

              <div class="form-group">
                <label for="email" "text-gray">Email</label>
                <input type="email" required="required" name="email" placeholder="example@gmail.com"
                value="<%= user.email %>">
              </div>

              <div class="form-group">
                <label for="gender"  class="text-gray">Gender</label>
                <div class="radio inline">
                  <input id="radio-2" type="radio" name="gender" value="Male" <%= user.gender == 'Male' ? 'checked' : '' %> /> 
                  <label for="radio-2" class="radio-label">Male</label>
                </div>
                <div class="radio inline">
                  <input id="radio-3" type="radio" name="gender" value="Female" <%= user.gender == 'Female' ? 'checked' : '' %> /> 
                  <label for="radio-3" class="radio-label">Female</label>
                </div>

              <div class="form-group">
                <label for="status" class="text-gray">Status</label>
                <div class="radio inline">
                  <input id="radio-4" type="radio" name="status" value="Active" <%= user.status == 'Active' ? 'checked' : '' %> /> 
                  <label for="radio-4" class="radio-label">Active</label>
                </div>
                <div class="radio inline">
                  <input id="radio-5" type="radio" name="status" value="Inactive" <%= user.status == 'Inactive' ? 'checked' : '' %> /> 
                  <label for="radio-5" class="radio-label">Inactive</label>
                </div>
              </div>

              <div class="form-group">
                <button type="submit" class="btn-form title-dark update" id="update">Save</button>
              </div>
          </div> 
      </form>

    </main> 

<%- include('./include/_footer')%>
